{
  "extends": "../../tsconfig.base.json",

  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*",
    "../../tsconfig.base.json"
  ],
  "compilerOptions": {
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"]
    },
    "composite": true,
    "declaration": true,
    "noEmit": true
  },
  "references": [{"path": "../api"}]
}
