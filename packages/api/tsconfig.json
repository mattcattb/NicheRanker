{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,

    "jsxImportSource": "hono/jsx",
    "paths": {
      "@/api/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist"]
}
