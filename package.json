{
  "name": "matty-stack",
  "private": true,
  "scripts": {
    "dev": "bun --filter \"*\"... dev",
    "build": "bun --filter \"*\" build",
    "typecheck": "bun tsc --noEmit",
    "clean": "tsc -b --clean && rm -rf packages/*/dist && rm -rf packages/*/.turbo && rm -rf node_modules"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "hono": "^4.8.3"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17"
  }
}
